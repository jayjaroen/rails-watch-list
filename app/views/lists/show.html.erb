<div class="container pt-5">
  <h2 style="text-align: center" class="subheader-font"> <%= @list.name.upcase%></h2>
    <div class="row justify-content-center">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-12 col-lg-8" >
          <div >
            <%= image_tag bookmark.movie.poster_url, class: 'card-img-top', width: '200px' if bookmark.movie.poster_url%>
            <div class="card-body">
                <h5 class="card-title"><strong><%= bookmark.movie.title %></strong></h5>
                <div class="card-text">
                  <p><strong>Overview:</strong><%= bookmark.movie.overview%></p>
                  <p><strong>Rating:</strong><%= bookmark.movie.rating %></p>
                  <p><strong>Comment:</strong><em><%= bookmark.comment %></em></p>
                </div>
              <p style="text-align :end"><%= link_to 'delete', bookmark_path(bookmark), class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: "Delete this movie from the list?"} %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <hr>


  <div class="row mt-4 mb-5">
    <div class="col-12 col-lg-5 mt-2">
      <h5 style="text-align:center" class="form-font"> <small class="text-muted">üçø Add a Movie >></small> <%= @list.name%></h5>
      <%= simple_form_for([@list, @bookmark]) do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit "create", class: 'btn btn-secondary btn-sm'%>
      <% end %>
    </div>
    <div class="card-body col-12 col-lg-7">
      <blockquote class="blockquote mb-0">
        <p class="font-quote">
        ‚ÄúWhat is real? How do you define real? If you're talking about
        what you can feel, what you can smell, what you can taste and see,
        then real is simply electrical signals interpreted by your brain.‚Äù
        </p>
        <footer class="blockquote-footer">Morpheus<cite title="Source Title">The Matrix</cite></footer>
       </blockquote>
    </div>
  </div>

  <p class="mb-3"><%= link_to 'Back to Binge-Watching Lists', lists_path, class: "btn btn-outline-secondary btn-sm" %></p>
</div>
